<div class="container">
    <div class="row">
        <div class="col-md-12">
            <h1>The Best Burgers Ever!</h1>
        </div>
    </div>
    <br>
    <br>

    <div class="row">
        <div class="col-md-6">
            <h3>Burgers Not Devoured</h3>
            <ul>
                {{#each burgers}}
                {{#unless devoured}}
                    <p> 
                        {{this.id}}
                        {{this.burger_name}}
                    <form action="/{{this.id}}?_method=PUT" method="POST">
                    <input type = "hidden" name="devoured" value="true">
                     <button class="devouredBurger" type="submit">Devoured</button>
                    </form>
                    </p>
                {{/unless}}
                {{/each}}
            </ul>
        </div>
        <div class="col-md-6">
            <h3>Burgers in My Belly!</h3>
            <ul>
                {{#each burgers}}
                {{#if devoured}}
                   <p>
                       {{this.id}}
                       {{this.burger_name}}
                      
                   </p>
                {{/if}}
                {{/each}}
            </ul>
        </div>
    </div>
</div>
    <form class="create-form">
    <div class ="form-group">
        <label for ="addBurger">Enter a Burger</label>
        <input type="text" id="addBurger" name="burgerName">
    </div>
    <button type = "submit">Add A Burger</button>
    </form>