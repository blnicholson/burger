<div class="container">
   
    <h1>The Best Burgers Ever!</h1>
    
    <div class="row">
        <div class="col-md-6">
            <div class="card" id="submitCard">
                <div class="card-body">
                    <form class="create-form">
                        <div class="form-group">
                            <label for="addBurger">Enter a Burger</label>
                            <input type="text" id="addBurger" name="burgerName">
                        </div>
                        <button type="submit">Add A Burger</button>
                    </form>
                </div>
            </div>
        </div>
    </div>


    <div class="row">
        <div class="col-md-4">
            <div class="card" id="notDevoured" >
                <div class="card-header">
                    <h3>Burgers Not Devoured</h3>
                </div>
                <div class="card-body">
                    <ul>
                        {{#each burgers}}
                        {{#unless devoured}}
                        {{>devours/devoured-block devour=false}}
                        {{/unless}}
                        {{/each}}
                    </ul>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card" id="devoured" >
                <div class="card-header">
                    <h3>Burgers in My Belly!</h3>
                </div>
                <div class="card-body">
                    <ul>
                        {{#each burgers}}
                        {{#if devoured}}
                        <li>
                            {{this.burger_name}}
                        </li>
                        {{/if}}
                        {{/each}}
                    </ul>
                </div>
            </div>
        </div>
    </div>
    
</div>